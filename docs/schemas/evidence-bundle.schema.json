{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://seo-ai-agent.local/schemas/evidence-bundle.schema.json",
  "title": "EvidenceBundle",
  "type": "object",
  "properties": {
    "urls": {
      "type": "array",
      "items": { "type": "string", "maxLength": 2000 },
      "uniqueItems": true
    },
    "fields": {
      "type": "object",
      "additionalProperties": { "type": "string", "maxLength": 4000 }
    },
    "screenshots": {
      "type": "array",
      "items": { "type": "string", "maxLength": 1000 },
      "uniqueItems": true
    },
    "trace_ref": { "type": ["string", "null"], "maxLength": 1000 }
  },
  "additionalProperties": true
}
